{
  "name": "topics",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "build": "ng build core --configuration development",
    "restore": "dotnet restore ./server -s ./server/nuget-packages",
    "seed": "dotnet run --project ./server/dbseeder -- \"Server=.\\DevSql;Database=topics-dev;Trusted_Connection=True;\"",
    "start:docs": "ng serve docs --configuration development",
    "start:server": "dotnet run --project ./server/Topics.Web",
    "start:topics": "ng serve topics --configuration development",
    "update-db": "dotnet ef database update -s ./server/Topics.Web",
    "watch": "ng build core --watch --configuration development",
    "watch:server": "dotnet watch run --project ./server/Topics.Web"
  },
  "dependencies": {
    "@angular/animations": "^13.3.0",
    "@angular/cdk": "^13.3.0",
    "@angular/common": "^13.3.0",
    "@angular/compiler": "^13.3.0",
    "@angular/core": "^13.3.0",
    "@angular/flex-layout": "^13.0.0-beta.38",
    "@angular/forms": "^13.3.0",
    "@angular/material": "^13.3.0",
    "@angular/platform-browser": "^13.3.0",
    "@angular/platform-browser-dynamic": "^13.3.0",
    "@angular/router": "^13.3.0",
    "@microsoft/signalr": "^6.0.3",
    "hammerjs": "^2.0.8",
    "marked": "^4.0.12",
    "prismjs": "^1.27.0",
    "rxjs": "^7.5.5",
    "tslib": "^2.3.1",
    "zone.js": "^0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^13.3.0",
    "@angular/cli": "^13.3.0",
    "@angular/compiler-cli": "^13.3.0",
    "@angular/language-service": "^13.3.0",
    "@fortawesome/fontawesome-free": "^6.1.0",
    "@types/marked": "^4.0.2",
    "@types/node": "^17.0.21",
    "@types/prismjs": "^1.26.0",
    "esbuild-windows-64": "^0.12.19",
    "ng-packagr": "^13.3.0",
    "prism-themes": "^1.9.0",
    "roboto-fontface": "^0.10.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  }
